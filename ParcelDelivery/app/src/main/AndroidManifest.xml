<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="giovannilenguito.co.uk.parceldelivery">

    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        android:required="true" />
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.RegisterActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controller.MainActivity" />
        </activity>
        <activity android:name=".controller.DashboardActivity" />
        <activity android:name=".controller.AddParcelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controller.DashboardActivity" />
        </activity>
        <activity android:name=".controller.ViewParcelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controller.DashboardActivity" />
        </activity>
        <activity android:name=".controller.AccountActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controller.DashboardActivity" />
        </activity>

        <service
            android:name=".service.NotificationService"
            android:exported="false" />
    </application>

</manifest>