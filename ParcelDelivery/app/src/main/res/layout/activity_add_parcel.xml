<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_parcel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="giovannilenguito.co.uk.parceldelivery.Controllers.AddParcelActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <TextView
                android:text="You are now adding a new parcel for a customer, the newly created parcel will be added to your jobs list "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                android:textStyle="normal|bold"
                android:paddingTop="10dp" />

            <TextView
                android:text="Select customer recipient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/customerLabel" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/customers"
                android:background="@drawable/inputfield"/>

            <TextView
                android:text="Delivery Options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:textStyle="normal|bold"
                android:paddingTop="20dp" />

            <TextView
                android:text="Delivery Type:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />

            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/deliveryType"
                android:entries="@array/delivery_type_array"
                android:layout_marginBottom="10dp"
                android:background="@drawable/inputfield"
                android:layout_height="40dp" />

            <TextView
                android:text="Prefered Delivery Date (DD/MM/YYYY)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dateTitle" />

            <Button
                android:text="Select Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dateSelect"
                android:background="@color/colorAccent"
                android:textColor="@color/cast_expanded_controller_text_color"
                android:onClick="selectDate"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:text="Parcel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:textStyle="normal|bold"
                android:paddingTop="20dp" />

            <TextView
                android:text="What is the parcel? (Include weight)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/contents"
                android:layout_weight="0.43"
                android:background="@drawable/inputfield"/>

            <TextView
                android:text="Preview Image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView16" />

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@color/buttonPrimary"
                android:id="@+id/preview"
                android:layout_height="140sp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
